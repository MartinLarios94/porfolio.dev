          </div>
          <h2 class="text-xl font-bold font-heading mb-4 pl-6">
            {testimonialTitle}
          </h2>
          <p class="text-gray-600 p-6">
            {testimonialDescription}
          </p>
        </div>
        <div class="flex items-center gap-4 flex-wrap">
          <div class="rounded-full bg-orange-50 overflow-hidden">
            <img
              src={avatarImage}
              alt=""
              height="46"
              width="46"
            />
          </div>
          <div>
            <h2 class="font-semibold mb-1">{name}</h2>
            <p class="text-purple-200 text-sm">{title}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
